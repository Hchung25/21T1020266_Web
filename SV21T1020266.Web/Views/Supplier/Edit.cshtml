@model Supplier
@{
    ViewBag.Title = "Thay đổi thông tin nhà cung cấp";
}
<div class=" box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post">
            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID"/>
            <div class="form-group">
                <label>Tên nhà cung cấp</label>
                <input type="text" class="form-control autofocus" name="@nameof(Model.SupplierName)" value="@Model.SupplierName"/>
            </div>
            <div class="form-group">
                <label>Tên giao dịch</label>
                <input type="text" class="form-control" name="@nameof(Model.ContactName)" value="@Model.ContactName"/>
            </div>
            <div class="form-group">
                <label>Điện thoại</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone"/>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" name="@nameof(Model.Email)" value="@Model.Email"/>
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address"/>
            </div>
            <div class="form-group">
                <label>Tỉnh thành</label>
                <select class="form-control select2" name="@nameof(Model.Province)" oninvalid="@Model.Province">
                    <option value="">-- Chọn Tỉnh/thành </option>
                    @foreach(var province in CommonDataServices.ListOfProvinces())
                    {
                        if (province.GetProvinceName() == Model.Province)
                        {
                            <option value="@province.GetProvinceName()" selected>@province.GetProvinceName</option>
                        }else
                        {
                            <option value="@province.GetProvinceName()">@province.GetProvinceName()</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
