@model Customer
@{
    
}
<div class=" box box-primary">
    <div class="box-body">
        <form action="~/Customer/Save" method="post">
            <input type="hidden" name="@nameof(Model.CustomerID)" value="@Model.CustomerID"/>
            <div class="form-group">
                <label>Tên khách hàng</label>
                <input type="text" class="form-control autofocus" name="@nameof(Model.CustomerName)" value="@Model.CustomerName"/>
            </div>
            <div class="form-group">
                <label>Tên giao dịch</label>
                <input type="text" class="form-control" name="@nameof(Model.ContactName)" value="@Model.ContactName"/>
            </div>
            <div class="form-group">
                <label>Điện thoại</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone"/>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" name="@nameof(Model.Email)" value="@Model.Email"/>
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address"/>
            </div>
            <div class="form-group">
                <label>Tỉnh thành</label>
                <select class="form-control select2" name="@nameof(Model.Province)">
                    <option value="">-- Chọn Tỉnh/thành </option>
                    @foreach (var province in CommonDataServices.ListOfProvinces())
                    {
                        if (province.GetProvinceName() == Model.Province)
                        {
                            <option value="@province.GetProvinceName()" selected>@province.GetProvinceName()</option>
                        }
                        else
                        {
                            <option value="@province.GetProvinceName()">@province.GetProvinceName()</option>
                        }
                    }
                    
                </select>
            </div>
            <div class="form-group">
                <label>Trạng thái:</label>
                <select class="form-control" name="@nameof(Model.IsLocked)">
                    @if(Model.IsLocked)
                    {
                        <option value="false">Khách hàng không bị khóa</option>
                        <option value="true" selected>Khách hàng bị khóa</option>
                    }else
                    {
                        <option value="false" selected>Khách hàng không bị khóa</option>
                        <option value="true">Khách hàng bị khóa</option>
                    }

                </select>
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Customer" class="btn btn-default">
                    Quay lại    
                </a>
            </div>
        </form>
    </div>
</div>